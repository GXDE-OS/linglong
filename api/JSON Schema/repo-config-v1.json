{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Version 1 configuration file for local linglong repository.",
    "type": "object",
    "properties": {
        "version": {
            "type": "integer"
        },
        "defaultRepo": {
            "type": "string"
        },
        "repos": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "required": [
        "version",
        "defaultRepo",
        "repos"
    ]
}
